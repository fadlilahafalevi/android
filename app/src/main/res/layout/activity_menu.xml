<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.androiddevelopment.mobile_banking.MenuActivity">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_inner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        card_view:cardBackgroundColor="@color/colorPrimaryDark"
        android:clipToPadding="true"
        card_view:cardCornerRadius="25dp"
        card_view:cardElevation="0dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:textSize="25dp"
            android:text="Savings Account No"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/avenirnextltpro_demi_xml"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:textSize="25dp"
            android:text="0000 0000 0001"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/txtBalanceSavings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:textSize="40dp"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/avenirnextltpro_demi_xml"/>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_inner1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        card_view:cardBackgroundColor="@color/colorPrimaryDark"
        android:clipToPadding="true"
        card_view:cardCornerRadius="25dp"
        card_view:cardElevation="0dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:textSize="25dp"
            android:text="Checking Account No"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/avenirnextltpro_demi_xml"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:textSize="25dp"
            android:text="0000 0000 0002"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/txtBalanceChecking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:textSize="40dp"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/avenirnextltpro_demi_xml"/>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/checkingButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/checking"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="10dp"
        android:padding="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="29dp"
        android:layout_alignParentLeft="true"
        android:text="Checking"
        android:textSize="15dp"
        android:textColor="@color/colorBackground"
        android:fontFamily="@font/avenirnextltpro_demi_xml"/>

    <Button
        android:id="@+id/savingsButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/saving"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:padding="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_centerHorizontal="true"
        android:text="Savings"
        android:textSize="15dp"
        android:textColor="@color/colorBackground"
        android:fontFamily="@font/avenirnextltpro_demi_xml"/>

    <Button
        android:id="@+id/transferButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/transfer"
        android:layout_alignParentRight="true"
        android:layout_marginTop="350dp"
        android:layout_marginRight="10dp"
        android:padding="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="470dp"
        android:layout_marginRight="29dp"
        android:layout_alignParentRight="true"
        android:text="Transfer"
        android:textSize="15dp"
        android:textColor="@color/colorBackground"
        android:fontFamily="@font/avenirnextltpro_demi_xml"/>

</RelativeLayout>
